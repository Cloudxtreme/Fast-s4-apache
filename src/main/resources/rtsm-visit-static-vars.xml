    <property name="outputStreamNameFiveMinutes" value="URLSeenCounterFiveMinutesStream"/>
    <property name="ttl" value="36000"/>
    <property name="logLevel" value="DEBUG"/> <!--log4j level: TRACE, DEBUG or INFO-->
  </bean>
  
